<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="pref_key_general_settings"
        android:title="@string/preferences_general_category">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_wifi_only_key"
            android:summary="@string/preferences_general_wifi_only_summary"
            android:title="@string/preferences_general_wifi_only_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_disable_animations_key"
            android:summary="@string/preferences_general_disable_animations_summary"
            android:title="@string/preferences_general_disable_animations_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_self_update_key"
            android:summary="@string/preferences_general_self_update_summary"
            android:title="@string/preferences_general_self_update_title" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_update_on_startup_key"
            android:summary="@string/preferences_general_update_on_startup_summary"
            android:title="@string/preferences_general_update_on_startup_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_refresh_update_list_after_installation"
            android:summary="@string/preferences_general_refresh_update_list_after_installation_summary"
            android:title="@string/preferences_general_refresh_update_list_after_installation_title" />
        <ListPreference
            android:defaultValue="@string/theme_blue"
            android:entries="@array/theme_values"
            android:entryValues="@array/theme_values"
            android:key="@string/preferences_general_theme_key"
            android:summary="%s"
            android:title="@string/preferences_general_theme_title" />
        <ListPreference
            android:defaultValue="@string/notification_always"
            android:entries="@array/notification_values"
            android:entryValues="@array/notification_values"
            android:key="@string/preferences_general_notification_key"
            android:summary="%s"
            android:title="@string/preferences_general_notification_title" />
        <ListPreference
            android:defaultValue="@string/alarm_daily"
            android:entries="@array/alarm_values"
            android:entryValues="@array/alarm_values"
            android:key="@string/preferences_general_alarm_key"
            android:summary="%s"
            android:title="@string/preferences_general_alarm_title" />
        <ListPreference
            android:defaultValue="@string/num_threads_five"
            android:entries="@array/num_threads_values"
            android:entryValues="@array/num_threads_values"
            android:key="@string/preferences_general_num_threads_key"
            android:summary="%s"
            android:title="@string/preferences_general_num_threads_title" />
        <ListPreference
            android:defaultValue="@string/update_hour_twelve"
            android:entries="@array/update_hour_values"
            android:entryValues="@array/update_hour_values"
            android:key="@string/preferences_general_update_hour_key"
            android:summary="%s"
            android:title="@string/preferences_general_update_hour_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_general_settings"
        android:title="@string/preferences_filter_category">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_skip_experimental_key"
            android:summary="@string/preferences_general_skip_experimental_summary"
            android:title="@string/preferences_general_skip_experimental_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_exclude_system_apps_key"
            android:summary="@string/preferences_general_exclude_system_apps_summary"
            android:title="@string/preferences_general_exclude_system_apps_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_exclude_disabled_apps_key"
            android:summary="@string/preferences_general_exclude_disabled_apps_summary"
            android:title="@string/preferences_general_exclude_disabled_apps_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_skip_architecture_key"
            android:summary="@string/preferences_general_skip_architecture_summary"
            android:title="@string/preferences_general_skip_architecture_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_skip_minapi_key"
            android:summary="@string/preferences_general_skip_minapi_summary"
            android:title="@string/preferences_general_skip_minapi_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_sources_settings"
        android:title="@string/preferences_sources_category">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_use_play_key"
            android:summary="@string/preferences_general_use_play_summary"
            android:title="@string/preferences_general_use_play_title" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="@string/preferences_general_use_apkmirror_key"
            android:summary="@string/preferences_general_use_apkmirror_summary"
            android:title="@string/preferences_general_use_apkmirror_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_use_apkpure_key"
            android:summary="@string/preferences_general_use_apkpure_summary"
            android:title="@string/preferences_general_use_apkpure_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_use_uptodown_key"
            android:summary="@string/preferences_general_use_uptodown_summary"
            android:title="@string/preferences_general_use_uptodown_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_general_use_aptoide_key"
            android:summary="@string/preferences_general_use_aptoide_summary"
            android:title="@string/preferences_general_use_aptoide_title" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="pref_key_play_settings"
        android:title="@string/preferences_play_category">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_play_root_install_key"
            android:summary="@string/preferences_play_root_install_summary"
            android:title="@string/preferences_play_root_install_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_play_automatic_install_key"
            android:summary="@string/preferences_play_automatic_install_summary"
            android:title="@string/preferences_play_automatic_install_title" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/preferences_play_own_account_key"
            android:summary="@string/preferences_play_own_account_summary"
            android:title="@string/preferences_play_own_account_title" />
    </PreferenceCategory>
</PreferenceScreen>
